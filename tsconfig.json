{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        "mapRoot": "./",
        "module": "ES2022",
        "moduleResolution": "Node",
        "outDir": "../dist/out-tsc",
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ],
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true
    }
}
