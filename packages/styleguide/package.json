{
  "name": "@ontotext/styleguide",
  "scripts": {
    "purge-css": "node ./scripts/purge-css.js",
    "prebuild:webpack": "npm run purge-css",
    "build": "rm -rf dist && npm run build:webpack",
    "build:webpack": "webpack --mode=production",
    "lint": "eslint --ext js,mjs,cjs",
    "lint:fix": "eslint --fix --ext js,mjs,cjs",
    "stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "stylelint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "test": "cross-env BABEL_ENV=test jest --passWithNoTests",
    "watch-tests": "cross-env BABEL_ENV=test jest --watch",
    "coverage": "cross-env BABEL_ENV=test jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-important-stuff": "^1.1.0",
    "glob": "^12.0.0",
    "jest": "^30.2.0",
    "jest-cli": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "webpack": "^5.103.0",
    "webpack-config-single-spa": "^8.0.0",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "graphwise-styleguide": "1.0.6"
  }
}
